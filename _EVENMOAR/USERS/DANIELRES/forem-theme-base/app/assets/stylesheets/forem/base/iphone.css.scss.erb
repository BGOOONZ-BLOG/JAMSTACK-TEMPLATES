@import "variables";

@media screen and (max-device-width: 480px){
  
  body{
    -webkit-text-size-adjust: none;
    padding: 5px;
    margin: 0 auto;
  }

  img{
    max-width: 100%;
    height: auto;
  }

  #forums{
    .views-count, .posts-count {
      display: none;
    }
  }

  // Individual forum topics listing
  .topics{
    .posts-count, .views-count{
      display: none;
    }
  }

  #topic, #forum{
    h2{
      font-size: 90%;
    }
  }

  #posts{
    .post{
      .user{
        display: block;
        width: auto;
        float: right;
        margin-left: 10px;
      }

      .contents{
        margin-left: 0;
        border-left: 0;
        
        .actions{
          display: block;
          margin-top: 20px;
          clear: both;
          position: inherit;
          right: 0;

          li {
            display: inline-block;
          }
        }
      }
    }
  }

}

