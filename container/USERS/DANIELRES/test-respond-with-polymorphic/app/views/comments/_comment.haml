- wrapper    ||= :div
- individual ||= false

= content_tag_for wrapper, comment do
  - if individual
  - else
    .meta
      %p= l(comment.created_at, :format => :short)
      %p= t('by') + ': ' + link_to(comment.author, comment.author)
    .body= simple_format comment.body
    .actions= link_to 'x', comment, :method => :delete