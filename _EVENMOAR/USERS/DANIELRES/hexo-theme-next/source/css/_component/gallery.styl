.post-gallery {
  overflow: hidden;
  display: table;
  border-spacing: 10px;
  border-collapse: separate;

}
.post-gallery a {
  display: table-cell;
  width: 25%;
  height: 100px;
  text-align: center;
  vertical-align: middle;
  border: none;
}

.post-gallery .post-gallery-img img {
  max-width: 100%;
  max-height: 100%;
  border: none;
}

.fancybox-close, .fancybox-close:hover {
  border: none;
}