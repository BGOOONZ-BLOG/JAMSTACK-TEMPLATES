<% if  @translation.errors.any? %>
  $("form#new_translation").replaceWith("<%= escape_javascript render('translations/form', translation: [@translation.expression, @translation]) %>").fadeIn();
<% else %>
  $('.modal-header button.close').click();
  $(".translations").html("<%= escape_javascript render('expressions/show/translations', parent: @translation.expression) %>");
  $("#<%=dom_id(@translation)%>").hide().fadeIn();
<% end %>
