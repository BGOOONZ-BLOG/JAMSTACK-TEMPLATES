= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :display_name
    = f.text_field :display_name

  .field
    = f.label :password
    = f.password_field :password

  .actions
    = f.submit 'Save'
