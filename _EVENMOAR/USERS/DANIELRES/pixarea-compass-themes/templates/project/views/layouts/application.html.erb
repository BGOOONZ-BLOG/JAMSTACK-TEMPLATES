<% content_for :header_prepend do %>
  <%= render(:partial => "/shared/menu_lang", :locals => {:dom_id => 'menu-lang', :css => 'menu'}) %>             
<% end -%>

<% 
  pixarea_theme = RefinerySetting.find_or_create_by_name(:name =>'pixarea_theme', :value => 'minipane-dark')
  pixarea_theme_name    = pixarea_theme.value.split("-")[0]
  pixarea_theme_variant = pixarea_theme.value.split("-")[1]
  locals = { :pixarea_theme => pixarea_theme_name, :pixarea_theme_variant => pixarea_theme_variant }
-%>
<%= render(:partial => '/layouts/' + pixarea_theme_name, :locals => locals ) rescue render(:partial => '/layouts/default', :locals => locals) -%>
