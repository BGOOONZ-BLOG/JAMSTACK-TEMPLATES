generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_EXAMPLE_DATABASE_URL")
}

model Teacher {
  id          Int          @id @default(autoincrement())
  userId      String
  email       String       @unique
  name        String
  curriculums Curriculum[]
}

model Student {
  id          Int          @id @default(autoincrement())
  userId      String
  email       String       @unique
  name        String
  curriculums Curriculum[]
}

model Curriculum {
  id        Int       @id @default(autoincrement())
  teacherId Int?
  content   String?
  createdAt DateTime  @default(now())
  published Boolean   @default(false)
  title     String
  teacher   Teacher?  @relation(fields: [teacherId], references: [id])
  students  Student[]
}

model Notifications {
  id         Int    @id @default(autoincrement())
  title      String
  descrition String
}
