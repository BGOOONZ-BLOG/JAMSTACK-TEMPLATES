
<div class="container">

  <div class="panel panel-default">
  <div class="panel-body">


    <div class="row">

      <div class="col-md-4 col-md-offset-4">
        <h3>Log in with Google</h3>
        <%= link_to '/users/auth/google_oauth2' do %>
          <img src="/btn_google_signin_light_normal_web.png"/>
        <% end %>
      </div>

      
    </div>
    <div class="row">


      <div class="col-md-4 col-md-offset-4">
        <h3><small>Or with email + password</small><a id="login_toggle" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">...</a></h3>
        <div class="collapse" id="collapseExample"><%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.password_field :password, class: 'form-control' %>
            </div>
              <%= f.submit 'Log in', :class => 'btn btn-default-sm right' %>
          <% end %>
        </div>
      </div>
    </div>


  </div>
  </div>

</div>
