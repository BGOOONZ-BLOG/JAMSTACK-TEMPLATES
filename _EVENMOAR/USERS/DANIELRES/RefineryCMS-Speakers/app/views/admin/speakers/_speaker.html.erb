<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(speaker) -%>">
  <span class='title'>
    <%= speaker.firstname %> <%= speaker.lastname %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), speaker_path(speaker),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_speaker_path(speaker),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_speaker_path(speaker),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => speaker.firstname),
        :method => :delete %>
  </span>
</li>
