{
  "src_folders": ["tests/e2e/"],
  "output_folder": "logs/tests-e2e-reports",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "globals_path": "",

  "selenium": {
    "start_process": true,
    "server_path": "./node_modules/selenium-wrapper/selenium-server-standalone-2.44.0.jar",
    "log_path": "./logs/",
    "host": "127.0.0.1",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "./node_modules/selenium-wrapper/chromedriver",
      "webdriver.ie.driver": ""
    }
  },

  "test_settings": {
    "default": {
      "launch_url": "http://localhost",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "screenshots": {
        "enabled": true,
        "path": "logs/tests-e2e-reports"
      }
    },
    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },
    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}
