<%= form_for(@forest, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @forest.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@forest.errors.count, "error") %> prohibited this forest from being saved:</h4>

      <ul>
      <% @forest.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :size, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.number_field :size, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :latitude, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.number_field :latitude, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :longitude, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.number_field :longitude, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :climate, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :climate, :class => "form-control" %>
    </div>
  </div>

  <%= f.fields_for :trees do |t| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        Tree
      </div>
      <div class="panel-body">
        <div class="form-group">
          <%= t.label :common_name, :class => "col-lg-2 control-label" %>
          <div class="col-lg-10">
            <%= t.text_field :common_name, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= t.label :scientific_name, :class => "col-lg-2 control-label" %>
          <div class="col-lg-10">
            <%= t.text_field :scientific_name, :class => "form-control" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
